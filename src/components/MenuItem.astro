---
import { Image } from 'astro:assets';
import iconBio from "../assets/images/icon-bio.svg";
import iconLocation from "../assets/images/icon-location.svg";
import iconVegan from "../assets/images/icon-vegan.svg";
import iconNoSulfites from "../assets/images/icon-no-sulfites.svg";

const { name, description, producer, location, tags, glass, bottle, price } = Astro.props;
const splitTags = tags?.split(",").map(tag => tag.toLowerCase().trim()) ?? [];
const headingName = (price) ? "menu-heading-price" : "menu-heading";

import { getLangFromUrl, useTranslations, useTranslatedPath } from '../i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<div class="menu-item">
    <div class={headingName}>
        <h3>{name}</h3>
        {(splitTags.includes("bio")) 
            ? <Image src={iconBio} alt="Bio." width="24" 
            class="icon-bio" 
            />
            : ""
        }
        {(price) ? <span class="price" style="margin-bottom: 0">{t("menu.price")} <div class="price-value">{price}</div></span> : ""}
    </div>

    <div class="menu-item-content">
        <div class="menu-item-column menu-item-description">
            {(description) ? <span></i>{description}</i></span> : ""}
            {(producer) ? <span class="producer"><span class="producer-field">{t("menu.producer")}:</span>{producer}</span> : ""}
        </div>
        <div class="menu-item-column">
            {(glass)  ? <span class="price">{t("menu.glass")} <div class="price-value">{glass}</div></span> : ""}
            {(bottle) ? <span class="price">{t("menu.bottle")} <div class="price-value">{bottle}</div></span> : ""}
        </div>
    </div>

    {(location || splitTags.length > 0) ?
    <div class="menu-tags">
        {(location) ? <Image src={iconLocation} alt={t("menu.location")} width="14" /> <span>{location}</span> : ""}

        {(splitTags.includes("vegan")) ? <Image src={iconVegan} alt={t("menu.vegan")} width="14" /> <span>{t("menu.vegan")}</span> : ""}

        {(splitTags.includes("no-sulfites")) ? <Image src={iconNoSulfites} alt={t("menu.no-sulfites")} width="14" /> <span>{t("menu.no-sulfites")}</span> : ""}
    </div>
    : ""}
</div>

<style>
    .menu-item {
        /* margin-top: 1rem; */
        /* padding-left: 1rem;
        padding-right: 1rem; */
    }

    .menu-heading {
        display: flex;
        align-items: center;

        @media (max-width: 800px) {
            justify-content: space-between;
        }
    }
    .menu-heading-price {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1.5rem;
        
        color: var(--brown);
    }
    
    .menu-item-content {
        color: var(--brown);
        font-weight: bold;
        
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        gap: 2rem;
    }
    .menu-item-description span {
        margin-bottom: 0.25rem;
    }
    
    .menu-item-column {
        display: flex;
        flex-direction: column;
    }
    
    .menu-item-row span {
        margin-bottom: 0rem;
    }
    
    .icon-bio {
        display: inline-block;
        margin-left: 1.5rem;
        margin-bottom: 0;
        padding-bottom: 0;
    }
    
    .producer {
        font-size: 16px;
    }
    .producer-field {
        margin-right: 0.5rem;
        font-family: 'MADE Tommy Soft Regular', sans-serif;
        font-weight: 400;
        font-size: 16px;
    }
    .price {
        margin-bottom: 0;
        line-height: 1.5rem;
        white-space: nowrap;
        font-size: 16px;
        
        display: flex;
        justify-content: space-between;
        text-align: right;
    }
    .price-value {
        display: inline-block;
        width: 1.75rem;
        
        font-family: 'MADE Tommy Soft Regular', sans-serif;
        font-weight: 400;
    }

    .menu-tags {
        margin-top: 0.75rem;
        margin-bottom: 0.75rem;

        display: flex;
        align-items: center;
    }
    .menu-tags img {
        margin-left: 0.75rem;
        margin-right: 0.5rem;
    }
    .menu-tags span {
        font-size: 14px;
        margin-bottom: 0;
        margin-left: 0.25rem;
        margin-right: 1rem;
    }
</style>