---
import { Image } from 'astro:assets';
import iconBio from "../assets/images/icon-bio.svg";

const { name, description, producer, location, tags, glass, bottle } = Astro.props;
const splitTags = tags.split(",").map(tag => tag.trim());
---

<div class="menu-item">
    <h3>
        {name}
        {(splitTags.includes("bio")) 
            ? <Image src={iconBio} alt="Bio." width="24" 
            class="icon-bio" 
            />
            : ""
        }
    </h3>
    
    <div class="menu-item-content">
        <div class="menu-item-column">
            <span><i>{description}</i></span>
            <span><span class="producer">Producer</span>{producer}</span>
        </div>
        <div class="menu-item-column">
            {(glass) ? <span class="price">glass <div class="price-value">{glass}</div></span> : ""}
            <span class="price">bottle <div class="price-value">{bottle}</div></span>
        </div>
    </div>
</div>

<style>
    .menu-item {
        margin-top: 2rem;
        /* padding-left: 1rem;
        padding-right: 1rem; */
    }
    
    .menu-item-content {
        color: var(--brown);
        font-weight: bold;
        
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        gap: 2rem;
    }
    .menu-item-content span {
        margin-bottom: 0.25rem;
    }
    
    .menu-item-column {
        display: flex;
        flex-direction: column;
    }
    
    .menu-item-row span {
        margin-bottom: 0rem;
    }

    .icon-bio {
        display: inline-block;
        margin-left: 1rem;
        margin-bottom: 0;
        padding-bottom: 0;
    }
    
    .producer {
        margin-right: 0.75rem;
        font-family: 'MADE Tommy Soft Regular', sans-serif;
        font-weight: 400;
    }
    .price {
        white-space: nowrap;

        display: flex;
        justify-content: space-between;
        text-align: right;
    }
    .price-value {
        display: inline-block;
        width: 2rem;
        
        font-family: 'MADE Tommy Soft Regular', sans-serif;
        font-weight: 400;
    }
</style>