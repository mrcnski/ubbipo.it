---
import PageContainer from "../components/PageContainer.astro";
---

<div class="footer">
    <p>© Ubbipo - Via De Filippo, 13 - Agropoli (SA)</p>
    <p>Site made with <span class="heart">♡</span> by <a href="mailto:marcin@realemail.net ">Marcin S.</a></p>
    <slot name="footer" />
</div>

<style>
    .footer {
		width: 65%;
		max-width: 1000px;
		margin: 0 auto;

        margin-top: 4rem;
        border-top: 1px solid var(--gray-bg);

        bottom: 0;
        text-align: center;
        padding: 2rem;
		
		@media (max-width: 800px) {
			width: 85%;
		}
		
		@media (max-width: 600px) {
			width: 95%;
		}
    }
    .footer * {
        margin-top: 0.5rem;
        font-size: 16px;

        @media (max-width: 768px) {
            font-size: 14px;
        }
    }

    .heart {
        color: red;
    }
</style>