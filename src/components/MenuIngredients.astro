---
interface Props {
    ingredients: Array<string>;
}

import FormatText from "./FormatText.astro";

const { ingredients } = Astro.props;

const regexItalics = /["|“]([^"“”]+)["|”]/g;
const regexBold = /\*([^\*]+)\*/g;
const regexSlow = /{slow}/g;
---

<ul>
    {ingredients.map((ingredient) => 
        <li>
            <FormatText text={ingredient} />
        </li>
    )}
</ul>

<style>
    ul {
        margin: 0;
        padding-left: 1rem;
    }
    li {
        list-style-type: "— ";
    }
</style>