---
const { sectionTitle } = Astro.props;
---

<div class="page-section">
    <h2 id={sectionTitle.toLowerCase().split(" ").join("-")}>{ sectionTitle }</h2>
    
    <slot />
</div> 

<style lang="less">
    .page-section {
        border-top: 1px solid var(--gray-bg);

        margin-top: 4rem;
        padding-left: 1rem;
        padding-right: 1rem;

        h2 {
            text-transform: none;

            @media (max-width: 768px) {
                font-size: 1.5rem;
            }
        }
    }
</style>