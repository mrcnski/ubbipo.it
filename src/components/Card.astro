---
interface Props {
	title: string;
	body: string;
	href: string;
	img?: string;
	icon?: string;
}

const { href, title, body, img, icon } = Astro.props;
---

<li class="link-card clickable spreadable">
	<a href={href}>
		<div class="heading">
			{(icon) && <img src={icon} class="icon filter-brown" />}
			<h2>
				{title}
				<span>&rarr;</span>
			</h2>
		</div>
		<p>
			{body}
		</p>
	</a>
</li>

<style>
	.link-card {
		list-style: none;
		display: flex;
		margin-bottom: 1.5rem;
		padding: 1px;

		border: 1px solid var(--gray);
		border-radius: 7px;
	}
	.link-card > a {
		width: 100%;
		padding: calc(1.5rem - 1px);
		
		text-decoration: none;
		color: var(--brown);
		line-height: 1.4;
		opacity: 0.8;
	}

	.heading {
        display: flex;
        align-items: center;
	}

	.icon {
		display: inline-block;
        margin-right: 0.5rem;
	}
	
	h2 {
		margin: 0;
		font-size: 1.25rem;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		letter-spacing: 0.1px !important;
	}
</style>
