---
import { Image } from 'astro:assets';

import WhatsAppIcon from "@images/icon/whatsapp.svg";

import { getLangFromUrl, useTranslations } from '@i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<a id="whatsapp" href="https://wa.me/393888699623">
    {t("site.book")}
    <Image src={WhatsAppIcon} id="img-whatsapp" alt="WhatsApp" />
</a>

<style lang="less">
    #whatsapp {
        position: fixed;

        display: flex;
        align-items: center;

        bottom: 16px;
        right: 1rem;
        z-index: 1000;

        padding: 0.75rem 1.75rem;
        border-radius: 8px;

        color: white;
        text-decoration: none;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 14px;
        font-weight: normal;

        transition: all ease-in-out 100ms;

        background-color: #24d366;
        filter: drop-shadow(0px 4px 6px rgba(0, 0, 0, 0.2));

        transform: scale(0.8);
        transform-origin: bottom right;
        &:hover {
            transform: scale(0.88);

            @media (max-width: 600px) {
                transform: scale(0.66);
            }
        }

        @media (max-width: 600px) {
            bottom: 3.75rem;
            transform: scale(0.6);
        }
    }

    #img-whatsapp {
        width: 18px;
        height: 18px;

        margin-left: 1rem;
        margin-right: 0;

        /* To white. */
        filter: invert(100%) sepia(9%) saturate(7500%) hue-rotate(266deg) brightness(123%) contrast(107%);

        @media (max-width: 600px) {
            width: 28px;
            height: 28px;
        }
    }
</style>
