---
interface Props {
    id?: string,
    icon?: ImageMetadata,
    text?: string,
    alt?: string,
    href?: string,
}

import { Image } from 'astro:assets';

const { id, icon, text, alt, href } = Astro.props;
const classList = ['nav-card'];

// Set the current page in the navbar to active.
//
// Trim any trailing slashes from the current page.
var currentPage = Astro.url.pathname.replace(/\/$/, '');
// Ensure a leading slash.
if (!currentPage.startsWith('/')) {
    currentPage = '/' + currentPage;
}

if (href === currentPage ||
    (id === "nav-button-menu" && currentPage.includes("menu"))) {
    classList.push('active');
}
---

<a id={id} class:list={classList} href={href} style="cursor: pointer;">
    {/* The inner div is used to apply the border to the text. */}
    <div class="inner">
        {(icon) && <Image class="nav-icon filter-brown" src={icon} alt={alt || text!} />}
        {text}
    </div>
</a>

<style lang="less">
	.nav-card {
        position: relative;
        display: flex;
		text-align: center;
        vertical-align: middle;
		text-decoration: none;

        width: 100%;
        height: 100%;

        padding-left: 0.75rem;
        padding-right: 0.75rem;

		color: var(--brown);
        font-size: 22px;
        font-weight: normal;

        transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);

		@media (max-width: 600px) {
			font-size: 16px;
		}

        &:hover * {
            color: var(--green);
        }

        &:not(:last-child)::after {
            position: absolute;
            content: "";
            right: 0;
            top: 30%;
            width: 1px;
            height: 40%;

            border-right: 1px solid var(--gray-bg);
        }

        * {
            transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        }
    }

    .inner {
        display: flex;
        align-items: center;

        width: auto;
        margin: auto;

        /* Prevents the border from moving the text when it appears */
        border-top: 2px solid transparent;
        border-bottom: 2px solid transparent;

        img {
            margin-left: 0;
            margin-right: 0.5rem;
        }
    }
    .active .inner {
        border-bottom: 1.5px solid var(--green);
    }

    .nav-icon {
        width: 19px;

        @media (max-width: 600px) {
            width: 16px;
        }
    }
</style>
