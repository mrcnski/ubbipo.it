---
import MenuLayout from "./MenuLayout.astro";
import MenuItem from "../components/MenuItem.astro";
import PageSection from "../components/PageSection.astro";

import { beers, drinks } from "../../oreste/drinks.js";

import { getLangFromUrl, useTranslations, useDataTranslations } from '../i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const d = useDataTranslations(lang);
---

<MenuLayout title={t("menu.drinks-menu")} description={t("menu.drinks-description")}>
    <PageSection sectionTitle={t("menu.beer")}>
        {beers.map((drink: any) => (
            <MenuItem 
                name={d(drink.name)} 
                description={d(drink.description)}
                producer={d(drink.producer)}
                location={d(drink.location)}
                tags={d(drink.tags)}
                glass={d(drink.glass)}
                bottle={d(drink.bottle)}
                price={d(drink.price)}
            />
        ))}
    </PageSection>

    <PageSection sectionTitle={t("menu.drinks")}>
        {drinks.map((drink: any) => (
            <MenuItem 
                name={d(drink.name)}
                description={d(drink.description)}
                producer={d(drink.producer)}
                location={d(drink.location)}
                tags={d(drink.tags)}
                glass={d(drink.glass)}
                bottle={d(drink.bottle)}
                price={d(drink.price)}
            />
        ))}
    </PageSection>
</MenuLayout>